<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/primary_container">

    <!-- LOGO CENTRADO -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivLogoCliente"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:src="@drawable/customer_3126649"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/CircularImage"
        app:strokeColor="@color/black"
        app:strokeWidth="3dp"/>

    <!-- TÍTULO -->
    <TextView
        android:id="@+id/tvTituloCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="LISTA DE CLIENTES"
        android:textColor="@color/titulo_principal"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="12dp"/>

    <!-- BUSCADOR + BOTÓN -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp">

        <EditText
            android:id="@+id/etBuscarCliente"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:background="@drawable/bg_edittext"
            android:hint="Buscar cliente..."
            android:textColor="@android:color/black"
            android:textColorHint="#888888"/>

        <Button
            android:id="@+id/btnNuevoCliente"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:text="Nuevo Cliente"
            android:textColor="@color/on_primary"
            android:background="@drawable/bg_button"/>

    </LinearLayout>

    <!-- ✅ CONTENEDOR PARA RECYCLERVIEW Y LOADING -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp">

        <!-- RECYCLERVIEW -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvClientes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <!-- ✅ PROGRESS BAR (spinner de carga) -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            tools:visibility="visible"/>

    </FrameLayout>

</LinearLayout>