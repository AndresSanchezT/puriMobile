<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".ui.pedidos.PedidoAddFragment">

    <!-- ProgressBar Circular (para loading) -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:elevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:visibility="visible" />

    <!-- Overlay oscuro cuando está cargando -->
    <View
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        tools:visibility="visible" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Título -->
            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nuevo Pedido"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#1E293B"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Card de Cliente -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/tvTitulo">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cliente"
                        android:textSize="14sp"
                        android:textColor="#64748B"
                        android:textStyle="bold"
                        android:letterSpacing="0.05" />

                    <!-- AutoCompleteTextView para buscar clientes -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilCliente"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="Seleccionar o buscar cliente"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxStrokeColor="#E2E8F0"
                        app:hintTextColor="#64748B"
                        app:startIconDrawable="@drawable/ic_person"
                        app:startIconTint="#64748B">

                        <AutoCompleteTextView
                            android:id="@+id/actvCliente"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:completionThreshold="1"
                            android:textSize="16sp"
                            android:textColor="#1E293B" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Card de Productos -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardProductos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/cardCliente">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Productos"
                        android:textSize="14sp"
                        android:textColor="#64748B"
                        android:textStyle="bold"
                        android:letterSpacing="0.05" />

                    <!-- AutoCompleteTextView para buscar productos -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilProducto"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="Buscar producto"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxStrokeColor="#E2E8F0"
                        app:hintTextColor="#64748B"
                        app:startIconDrawable="@drawable/ic_search"
                        app:startIconTint="#64748B">

                        <AutoCompleteTextView
                            android:id="@+id/actvProducto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:completionThreshold="1"
                            android:textSize="16sp"
                            android:textColor="#1E293B" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Control de cantidad y precio -->
                    <LinearLayout
                        android:id="@+id/layoutCantidadPrecio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <!-- Sección de Cantidad -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginEnd="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cantidad"
                                android:textSize="13sp"
                                android:textColor="#64748B"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginTop="8dp">

                                <!-- Botón Menos -->
                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnMenos"
                                    style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:insetTop="0dp"
                                    android:insetBottom="0dp"
                                    app:icon="@drawable/ic_remove"
                                    app:iconGravity="textStart"
                                    app:iconPadding="0dp"
                                    app:cornerRadius="12dp"
                                    app:backgroundTint="#F1F5F9"
                                    app:iconTint="#64748B" />

                                <!-- ========== NUEVO: FrameLayout con EditText Simple ========== -->
                                <FrameLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:minHeight="56dp"
                                    android:layout_weight="1"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:background="@drawable/cantidad_input_background">

                                    <EditText
                                        android:id="@+id/etCantidad"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:minHeight="56dp"
                                        android:background="@android:color/transparent"
                                        android:gravity="center"
                                        android:inputType="number"
                                        android:text="1"
                                        android:textAlignment="center"
                                        android:textColor="#1E293B"
                                        android:textSize="20sp"
                                        android:textStyle="bold"
                                        android:paddingStart="16dp"
                                        android:paddingEnd="16dp"
                                        android:paddingTop="12dp"
                                        android:paddingBottom="12dp"
                                        android:maxLength="4"
                                        android:lines="1"
                                        android:maxLines="1" />

                                </FrameLayout>

                                <!-- Botón Más -->
                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnMas"
                                    style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:insetTop="0dp"
                                    android:insetBottom="0dp"
                                    app:icon="@drawable/ic_add"
                                    app:iconGravity="textStart"
                                    app:iconPadding="0dp"
                                    app:cornerRadius="12dp"
                                    app:backgroundTint="#F1F5F9"
                                    app:iconTint="#64748B" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Sección de Precio -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Precio"
                                android:textSize="13sp"
                                android:textColor="#64748B"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvPrecio"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="S/. 0.00"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="#3B82F6"
                                android:gravity="end" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Botón Agregar Producto -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAgregarProducto"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="20dp"
                        android:text="Agregar Producto"
                        android:textSize="15sp"
                        android:visibility="gone"
                        app:icon="@drawable/ic_add"
                        app:cornerRadius="12dp"
                        app:backgroundTint="#EEF2FF"
                        app:iconTint="#3B82F6"
                        android:textColor="#3B82F6"
                        tools:visibility="visible" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Lista de productos agregados -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvProductosAgregados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/cardProductos"
                tools:listitem="@layout/item_producto_pedido"
                tools:itemCount="3" />

            <!-- Card de Resumen -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardResumen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="#3B82F6"
                app:layout_constraintTop_toBottomOf="@id/rvProductosAgregados">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Resumen del Pedido"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Subtotal:"
                            android:textSize="15sp"
                            android:textColor="#E0E7FF" />

                        <TextView
                            android:id="@+id/tvSubtotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S/. 0.00"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="IGV (18%):"
                            android:textSize="15sp"
                            android:textColor="#E0E7FF" />

                        <TextView
                            android:id="@+id/tvIgv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S/. 0.00"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF" />

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:background="#60A5F4" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total:"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/tvTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S/. 0.00"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Botón Guardar Pedido -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGuardarPedido"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:text="Guardar Pedido"
                android:textSize="16sp"
                android:textStyle="bold"
                app:icon="@drawable/ic_check"
                app:cornerRadius="16dp"
                app:backgroundTint="#10B981"
                app:layout_constraintTop_toBottomOf="@id/cardResumen"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>