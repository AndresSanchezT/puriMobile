<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8F0"
    tools:context=".ui.pedidos.PedidoAddFragment">

    <!-- ProgressBar Circular (para loading) -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:elevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:visibility="visible" />

    <!-- Overlay oscuro cuando está cargando -->
    <View
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        tools:visibility="visible" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Título -->
            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nuevo Pedido"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#2C1810"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Card de Cliente -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/tvTitulo">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cliente"
                        android:textSize="14sp"
                        android:textColor="#6B5444"
                        android:textStyle="bold"
                        android:letterSpacing="0.05" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilCliente"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="Seleccionar o buscar cliente"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxStrokeColor="#E8D5B7"
                        app:hintTextColor="#A89080"
                        app:startIconDrawable="@drawable/ic_person"
                        app:startIconTint="#A67B5B">

                        <AutoCompleteTextView
                            android:id="@+id/actvCliente"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:completionThreshold="1"
                            android:textSize="16sp"
                            android:textColor="#2C1810" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Card de Fecha de Entrega -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardFechaEntrega"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha de Entrega"
                        android:textSize="14sp"
                        android:textColor="#6B5444"
                        android:textStyle="bold"
                        android:letterSpacing="0.05" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/bg_edittext"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_calendar"
                            android:contentDescription="Calendario"
                            android:layout_marginEnd="12dp"
                            app:tint="#A67B5B" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pedido para:"
                            android:textColor="#6B5444"
                            android:textSize="14sp"
                            android:layout_marginEnd="8dp"/>

                        <Spinner
                            android:id="@+id/spinnerFechaEntrega"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:spinnerMode="dropdown"
                            android:minHeight="48dp"
                            android:background="@android:color/transparent"/>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Card de Productos -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardProductos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/cardCliente">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Productos"
                        android:textSize="14sp"
                        android:textColor="#6B5444"
                        android:textStyle="bold"
                        android:letterSpacing="0.05" />

                    <!-- AutoCompleteTextView buscar productos (naranja) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilProducto"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="Buscar producto"
                        android:textColorHint="#FFFFFF"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxBackgroundColor="#E8854D"
                        app:boxStrokeColor="#FFFFFF"
                        app:boxStrokeWidth="2dp"
                        app:hintTextColor="#FFFFFF"
                        app:hintTextAppearance="@style/HintTextWhite"
                        app:startIconDrawable="@drawable/ic_search"
                        app:startIconTint="#FFFFFF"
                        app:endIconTint="#FFFFFF">

                        <AutoCompleteTextView
                            android:id="@+id/actvProducto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:completionThreshold="1"
                            android:inputType="text"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textColorHint="#F5E6D3" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Control de cantidad, precio y subtotal -->
                    <LinearLayout
                        android:id="@+id/layoutCantidadPrecio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <!-- Primera fila: Cantidad y Precio Unitario -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:baselineAligned="false">

                            <!-- Sección de Cantidad (weight 3 = 60%) -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:orientation="vertical"
                                android:layout_marginEnd="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Cantidad"
                                    android:textSize="13sp"
                                    android:textColor="#6B5444"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:layout_marginTop="8dp">

                                    <!-- Botón Menos -->
                                    <com.google.android.material.button.MaterialButton
                                        android:id="@+id/btnMenos"
                                        style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:insetTop="0dp"
                                        android:insetBottom="0dp"
                                        app:icon="@drawable/ic_remove"
                                        app:iconGravity="textStart"
                                        app:iconPadding="0dp"
                                        app:iconSize="18dp"
                                        app:cornerRadius="10dp"
                                        app:backgroundTint="#F5E6D3"
                                        app:iconTint="#A67B5B" />

                                    <!-- EditText Cantidad -->
                                    <FrameLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:layout_marginStart="4dp"
                                        android:layout_marginEnd="4dp"
                                        android:background="@drawable/cantidad_input_background">

                                        <EditText
                                            android:id="@+id/etCantidad"
                                            android:layout_width="match_parent"
                                            android:layout_height="48dp"
                                            android:background="@android:color/transparent"
                                            android:gravity="center"
                                            android:inputType="numberDecimal"
                                            android:text="1.0"
                                            android:textAlignment="center"
                                            android:textColor="#2C1810"
                                            android:textSize="20sp"
                                            android:textStyle="bold"
                                            android:paddingStart="2dp"
                                            android:paddingEnd="2dp"
                                            android:maxLength="6"
                                            android:lines="1"
                                            android:maxLines="1"
                                            android:hint="1.0"
                                            android:letterSpacing="0.02" />

                                    </FrameLayout>

                                    <!-- Botón Más -->
                                    <com.google.android.material.button.MaterialButton
                                        android:id="@+id/btnMas"
                                        style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:insetTop="0dp"
                                        android:insetBottom="0dp"
                                        app:icon="@drawable/ic_add"
                                        app:iconGravity="textStart"
                                        app:iconPadding="0dp"
                                        app:iconSize="18dp"
                                        app:cornerRadius="10dp"
                                        app:backgroundTint="#F5E6D3"
                                        app:iconTint="#A67B5B" />

                                </LinearLayout>

                            </LinearLayout>

                            <!-- Sección de Precio Unitario (weight 2 = 40%) -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:orientation="vertical"
                                android:layout_marginStart="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Precio Unit."
                                    android:textSize="13sp"
                                    android:textColor="#6B5444"
                                    android:textStyle="bold" />

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:background="@drawable/cantidad_input_background">

                                    <EditText
                                        android:id="@+id/etPrecio"
                                        android:layout_width="match_parent"
                                        android:layout_height="48dp"
                                        android:background="@android:color/transparent"
                                        android:gravity="center"
                                        android:inputType="numberDecimal"
                                        android:text="0.00"
                                        android:textAlignment="center"
                                        android:textColor="#E8854D"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        android:paddingStart="4dp"
                                        android:paddingEnd="4dp"
                                        android:maxLength="8"
                                        android:lines="1"
                                        android:maxLines="1"
                                        android:hint="0.00" />

                                </FrameLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Botones de ajuste de precio (+0.50 / -0.50) -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="end"
                            android:layout_marginTop="8dp">

                            <!-- Botón Menos Precio (-0.50) -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnMenosPrecio"
                                style="@style/Widget.Material3.Button.TonalButton"
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:minWidth="60dp"
                                android:insetTop="0dp"
                                android:insetBottom="0dp"
                                android:insetLeft="0dp"
                                android:insetRight="0dp"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:layout_marginEnd="8dp"
                                android:text="-0.5"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                app:cornerRadius="10dp"
                                app:backgroundTint="#FFCDD2"
                                android:textColor="#E53935" />

                            <!-- Botón Más Precio (+0.50) -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnMasPrecio"
                                style="@style/Widget.Material3.Button.TonalButton"
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:minWidth="60dp"
                                android:insetTop="0dp"
                                android:insetBottom="0dp"
                                android:insetLeft="0dp"
                                android:insetRight="0dp"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:text="+0.5"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                app:cornerRadius="10dp"
                                app:backgroundTint="#FDECD5"
                                android:textColor="#E8854D" />

                        </LinearLayout>

                        <!-- Segunda fila - Subtotal / Importe -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Importe"
                                android:textSize="13sp"
                                android:textColor="#6B5444"
                                android:textStyle="bold" />

                            <!-- Card subtotal -->
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="0dp"
                                app:strokeWidth="0dp"
                                app:cardBackgroundColor="#FDECD5">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:padding="14dp">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Total a agregar:"
                                        android:textSize="14sp"
                                        android:textColor="#6B4226"
                                        android:textStyle="bold" />

                                    <FrameLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:minWidth="100dp">

                                        <EditText
                                            android:id="@+id/tvSubtotalProducto"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:minWidth="100dp"
                                            android:background="@android:color/transparent"
                                            android:gravity="end|center_vertical"
                                            android:inputType="numberDecimal"
                                            android:text="0.00"
                                            android:textAlignment="textEnd"
                                            android:textSize="20sp"
                                            android:textStyle="bold"
                                            android:textColor="#6B4226"
                                            android:paddingStart="8dp"
                                            android:paddingEnd="0dp"
                                            android:maxLength="10"
                                            android:lines="1"
                                            android:maxLines="1"
                                            android:hint="0.00"
                                            android:selectAllOnFocus="true" />

                                    </FrameLayout>

                                </LinearLayout>

                            </com.google.android.material.card.MaterialCardView>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Botón Agregar Producto -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAgregarProducto"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="20dp"
                        android:text="Agregar Producto"
                        android:textSize="15sp"
                        android:visibility="gone"
                        app:icon="@drawable/ic_add"
                        app:cornerRadius="12dp"
                        app:backgroundTint="#FDECD5"
                        app:iconTint="#E8854D"
                        android:textColor="#E8854D"
                        tools:visibility="visible" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- RecyclerView productos agregados -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvProductosAgregados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:nestedScrollingEnabled="true"
                app:layout_constraintTop_toBottomOf="@id/cardProductos"
                tools:listitem="@layout/item_producto_pedido"
                tools:itemCount="3" />

            <!-- Campo de Observación -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilObservacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Observación del pedido"
                app:boxStrokeColor="#E8D5B7"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:hintTextColor="#A89080">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etObservacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    android:gravity="top|start"
                    android:inputType="textMultiLine"
                    android:maxLines="4"
                    android:textColor="#2C1810"
                    android:textSize="15sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Card de Resumen (naranja principal) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardResumen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="#E8854D"
                app:layout_constraintTop_toBottomOf="@id/rvProductosAgregados">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Resumen del Pedido"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF" />

                    <!-- Subtotal -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Subtotal:"
                            android:textSize="15sp"
                            android:textColor="#F5E6D3" />

                        <TextView
                            android:id="@+id/tvSubtotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S/. 0.00"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF" />

                    </LinearLayout>

                    <!-- IGV -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="IGV (18%):"
                            android:textSize="15sp"
                            android:textColor="#F5E6D3" />

                        <TextView
                            android:id="@+id/tvIgv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S/. 0.00"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF" />

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:background="#D4A574" />

                    <!-- Total -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total:"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/tvTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S/. 0.00"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Botón Guardar Pedido (verde olivo) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGuardarPedido"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:text="Guardar Pedido"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                app:icon="@drawable/ic_check"
                app:iconTint="#FFFFFF"
                app:cornerRadius="16dp"
                app:backgroundTint="#6B8E5A"
                app:layout_constraintTop_toBottomOf="@id/cardResumen"
                app:layout_constraintBottom_toBottomOf="parent" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>