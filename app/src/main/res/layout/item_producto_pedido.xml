<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Icono del producto -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardIcono"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="#EEF2FF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivProducto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="14dp"
                android:src="@drawable/ic_product"
                app:tint="#3B82F6"
                android:contentDescription="Icono producto" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Contenedor de información del producto -->
        <LinearLayout
            android:id="@+id/layoutInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@id/cardIcono"
            app:layout_constraintEnd_toStartOf="@id/btnEliminarCard"
            app:layout_constraintTop_toTopOf="@id/cardIcono">

            <!-- Nombre del producto -->
            <TextView
                android:id="@+id/tvNombreProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Producto"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1E293B"
                android:ellipsize="end"
                android:maxLines="1"
                android:letterSpacing="0.01"
                tools:text="Coca Cola 1L" />

            <!-- Cantidad con badge -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp"
                    app:cardBackgroundColor="#F1F5F9">

                    <TextView
                        android:id="@+id/tvCantidad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="x1"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#64748B"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        tools:text="x5" />

                </com.google.android.material.card.MaterialCardView>

                <!-- Precio unitario -->
                <TextView
                    android:id="@+id/tvPrecioUnitario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="S/. 0.00 c/u"
                    android:textSize="12sp"
                    android:textColor="#94A3B8"
                    tools:text="S/. 3.50 c/u" />

            </LinearLayout>

        </LinearLayout>

        <!-- Precio total del item -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@id/cardIcono"
            app:layout_constraintEnd_toStartOf="@id/btnEliminarCard"
            app:layout_constraintTop_toBottomOf="@id/layoutInfo"
            app:layout_constraintBottom_toBottomOf="@id/cardIcono">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subtotal"
                android:textSize="11sp"
                android:textColor="#94A3B8"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPrecioItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S/. 0.00"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#3B82F6"
                android:layout_marginTop="2dp"
                tools:text="S/. 17.50" />

        </LinearLayout>

        <!-- Botón Eliminar -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnEliminarCard"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="#FEE2E2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/btnEliminar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_delete"
                android:padding="12dp"
                app:tint="#EF4444"
                android:contentDescription="Eliminar producto"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless" />

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>