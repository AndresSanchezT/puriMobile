<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5"
    tools:context=".ui.adminData.AdminDataFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título Principal -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DATOS DE PEDIDOS DE HOY"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/primaryDark"
            android:gravity="center"
            android:layout_marginBottom="20dp"/>

        <!-- Card: Total de Pedidos -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#4CAF50">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total de Pedidos de Hoy"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvTotalPedidos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Sección: Pedidos Entregados por Vendedor -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pedidos Entregados por Vendedor"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp"/>

        <!-- Lista de Vendedores (Estático para 3, puedes hacer dinámico después) -->
        <LinearLayout
            android:id="@+id/llVendedoresContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Vendedor 1 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/customer_3126649"
                        app:tint="#2196F3"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:id="@+id/tvVendedor1Nombre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vendedor Luis"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/tvVendedor1Entregados"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 entregados"
                            android:textSize="14sp"
                            android:textColor="#666666"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvVendedor1Numero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="#2196F3"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Vendedor 2 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/customer_3126649"
                        app:tint="#FF9800"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:id="@+id/tvVendedor2Nombre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vendedor Jorge"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/tvVendedor2Entregados"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 entregados"
                            android:textSize="14sp"
                            android:textColor="#666666"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvVendedor2Numero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="#FF9800"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Vendedor 3 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/customer_3126649"
                        app:tint="#9C27B0"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:id="@+id/tvVendedor3Nombre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vendedor María"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/tvVendedor3Entregados"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 entregados"
                            android:textSize="14sp"
                            android:textColor="#666666"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvVendedor3Numero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="#9C27B0"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Sección de Filtros -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filtrar Pedidos"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"/>

        <!-- Dropdown: Seleccionar Vendedor -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilVendedorSelector"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Seleccionar Vendedor"
            android:layout_marginBottom="16dp"
            app:boxBackgroundColor="#FFFFFF">

            <AutoCompleteTextView
                android:id="@+id/actvVendedorSelector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:text="Todos los Vendedores"
                android:textColor="@color/black"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Filtros de Tipo de Pago -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filtrar por Tipo de Pago"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp"/>

        <!-- Primera fila de botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFiltroEfectivo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Efectivo"
                android:textSize="12sp"
                app:icon="@android:drawable/ic_menu_manage"
                app:iconSize="18dp"
                app:cornerRadius="8dp"
                android:layout_marginEnd="4dp"
                style="@style/Widget.Material3.Button.TonalButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFiltroCredito"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Crédito"
                android:textSize="12sp"
                app:icon="@android:drawable/ic_menu_recent_history"
                app:iconSize="18dp"
                app:cornerRadius="8dp"
                android:layout_marginStart="4dp"
                style="@style/Widget.Material3.Button.TonalButton"/>

        </LinearLayout>

        <!-- Segunda fila de botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFiltroYapePlin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Yape/Plin"
                android:textSize="12sp"
                app:icon="@android:drawable/ic_menu_send"
                app:iconSize="18dp"
                app:cornerRadius="8dp"
                android:layout_marginEnd="4dp"
                style="@style/Widget.Material3.Button.TonalButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFiltroTransferencia"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Transferencia"
                android:textSize="12sp"
                app:icon="@android:drawable/ic_menu_rotate"
                app:iconSize="18dp"
                app:cornerRadius="8dp"
                android:layout_marginStart="4dp"
                style="@style/Widget.Material3.Button.TonalButton"/>

        </LinearLayout>

        <!-- Tercera fila: Anulados y Limpiar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFiltroAnulados"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Anulados"
                android:textSize="12sp"
                app:icon="@android:drawable/ic_menu_close_clear_cancel"
                app:iconSize="18dp"
                app:cornerRadius="8dp"
                android:layout_marginEnd="4dp"
                style="@style/Widget.Material3.Button.TonalButton"
                app:backgroundTint="#F44336"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLimpiarFiltros"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Limpiar"
                android:textSize="12sp"
                app:icon="@android:drawable/ic_menu_revert"
                app:iconSize="18dp"
                app:cornerRadius="8dp"
                android:layout_marginStart="4dp"
                style="@style/Widget.Material3.Button.OutlinedButton"/>

        </LinearLayout>

        <!-- RecyclerView para mostrar pedidos filtrados -->
        <TextView
            android:id="@+id/tvResultadoFiltro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mostrando todos los pedidos"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPedidosFiltrados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            tools:listitem="@layout/item_pedido"
            tools:itemCount="5"/>

    </LinearLayout>

</ScrollView>